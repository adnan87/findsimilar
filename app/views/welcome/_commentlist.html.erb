<% @answers.each do |answer| %>
  <ol id="comment-list" class="group">
  <li class="comment">
    <span class="comment-meta">Posted by <strong><%= answer.user.name if answer.user %></strong>, at
      <time> <%= answer.updated_at %>
      </time>
      <%if current_user %>
        <% if answer.question.user_id == current_user.id %>
          <%= link_to  "Accept Answer",update_answer_path(:answer_id => answer.id,:question_id => answer.question_id),:class=>"answer-comment",:remote=>true %>    
        <% end %>
      <% end %>
    </span>

    <div class="comment-text group">
      <img class="avatar" src="<%= answer.image %>" alt="">
      <div class="comment-copy">
        <p>
          <%= answer.comment %>
        </p>
        <div class = "comment_vote">
          <%= link_to "Buy this", answer.url,  :TARGET => '_blank' %>
          <%= link_to "vote up", votes_path(:answer_id => answer.id, :is_vote => true), :method => "post", :remote => true, :class => "comment_vote" %>
          <% if current_user %>
            <%  like = Like.find_by_user_id_and_answer_id(current_user.id, answer.id) rescue nil %>
             <%  if like.present? and like.is_like == true %>
                <%= link_to "Unlike", update_like_status_path(:answer_id => answer.id, :user_id => current_user.id), :remote => true %>
              <% else %>
              <%  if answer.likes.present? %>
                <%= link_to "Like", update_like_status_path(:answer_id => answer.id, :user_id => current_user.id), :remote => true %>
              <% else %>
              <%= link_to "Like", likes_path(:answer_id => answer.id, :user_id => current_user.id), :method => "post", :remote => true %>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>

<script>
$('.comment_vote').click(function(){
  $(this).css('color','black');
});
$('.answer-comment').click(function(){
  $(this).css('color','black');
});
</script>
 
